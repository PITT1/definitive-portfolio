---
import Layout from "@/layouts/Layout.astro";
import image1 from "../../public/android-game.png"
import { Image } from "astro:assets";
---

<Layout title="Tiny Brave">
    <header class="bg-gray-800 p-4">
        <h1 class="text-3xl font-bold text-left">Tiny Brave</h1>
    </header>
    <main class="flex flex-col items-center p-8">
        <section class="text-center mb-8">
            <h2 class="text-2xl font-semibold mb-4">Join the Adventure!</h2>
            <p class="mb-4">Tiny Brave is an exciting mobile game where you embark on epic quests and battle fierce enemies. Are you brave enough to take on the challenge?</p>
            <a href="#" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">Download Now</a>
        </section>
        <section class="w-full max-w-md">
            <Image src={image1} alt="Game Screenshot" class="w-full rounded shadow-lg">
        </section>
    </main>
    <footer class="bg-gray-800 p-4 text-center">
        <p class="text-white">&copy; 2023 Tiny Brave. All rights reserved.</p>
    </footer>
</Layout>
